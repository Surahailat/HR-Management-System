<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DotCreative</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/EmployeesLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HR_Management_System.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/img/logo2.png" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    @RenderSection("Style", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="d-flex">
            <!-- Sidebar -->
            <nav class="sidebar" id="sidebar">
                <div>
                    <button class="close-sidebar" type="button" data-bs-dismiss="sidebar">
                        <i class="fas fa-times"></i>
                    </button>
                    <img src="~/img/logo.png" alt="logo" class="logo" />
                    
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "EmployeeDashboard" ? "active" : "")"
                               asp-area="" asp-controller="Employees" asp-action="EmployeeDashboard">
                                <img src="~/img/menu.png" alt="Dashboard" class="icon" /> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Attendance" ? "active" : "")"
                               asp-area="" asp-controller="Employees" asp-action="Attendance">
                                <img src="~/img/user.png" alt="Attendance" class="icon" /> Attendance
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Tasks" ? "active" : "")"
                               asp-area="" asp-controller="Employees" asp-action="EmployeesTasks">
                                <img src="~/img/to-do-list.png" alt="Tasks" class="icon" /> Tasks
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Leave" ? "active" : "")"
                               asp-area="" asp-controller="Employees" asp-action="EmpLeaveRequest">
                                <img src="~/img/logout.png" alt="Request Leave" class="icon" />  Leave Requests
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Vacation" ? "active" : "")"
                               asp-area="" asp-controller="Employees" asp-action="EmpVacRequest">
                                <img src="~/img/calendar.png" alt="Request Vacation" class="icon" />  Vacation Requests
                            </a>
                        </li>
                    </ul>
                </div>
                <footer class="sidebar-footer">
                    <p>DotCreative <br> All rights reserved</p>
                </footer>
            </nav>

            <!-- Main Content -->
            <div class="main-content">
                <!-- Topbar with Hamburger Menu -->
                <header class="topbar">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle sidebar">
                        <span class="navbar-toggler-icon">☰</span>
                    </button>
                    <div class="user-menu">
                        <div class="user-profile">

@*                             <img src="~/img/@Context.Session.GetString("ProfileImage")" alt="User">
 *@                            <span>@Context.Session.GetString("Name") <small>Employee</small></span>
                            <div class="dropdown">
                                <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-chevron-down"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <i class="fas fa-user icon text-black"></i>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="EmployeeProfile" asp-route-id="@Model.?Id">Profile</a>
                                    </li>
                                    <li>
                                        <i class="fas fa-sign-out-alt icon text-danger"></i>
                                        <a class="dropdown-item text-danger" asp-controller="Home" asp-action="Accounts">Sign out</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </header>

                <!-- Content Area -->
                <main class="content">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.querySelector('.close-sidebar').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.remove('show');
        });
            $(window).on('resize', function() {
            if ($(window).width() >= 768) {
                $('#sidebar').addClass('show');
            } else {
                $('#sidebar').removeClass('show');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
