@model IEnumerable<HR_Management_System.Models.LeaveRequest>


@{
    ViewData["Title"] = "Leave Requests";
    Layout = "_EmployeeLayout";

}
<div style="   margin-left: 28px; margin-right: 20px;    margin-top: 16px;">
<h1 class="mb-3">Leave Requests</h1>

<a asp-controller="Employees" asp-action="CreateLeaveReq" class="btn btn-primary" style=" background-color: #1f2732;">
    + New Leave Request
</a>


<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Type</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Leave Hours</th>
            <th>Reason</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.LeaveType</td>
                <td>@request.StartTime</td>
                <td>@request.EndTime</td>
                <td>@request.LeaveHours</td>
                <td>@(string.IsNullOrEmpty(request.Reason) ? "N/A" : request.Reason)</td>
                <td>
                    <span class="badge @(request.Status == "Approved" ? "bg-success" : request.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark")">
                        @request.Status
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>