@model IEnumerable<HR_Management_System.Models.Evaluation>

@{
    ViewData["Title"] = "View Evaluation";
    Layout = "_LayoutHR";
}
<br />

<h1 class="text-center" style="color: #1f2732; font-weight: bold; font-size: 2.5rem;">Evaluations</h1>
<br />

<table class="table table-striped table-bordered shadow-lg rounded">
    <thead class="thead-dark">
        <tr id="HHH">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Employee)
            </th>

            <th class="text-center">
                @Html.DisplayNameFor(model => model.Comment)
            </th>

            <th class="text-center">
                @Html.DisplayNameFor(model => model.Status)
            </th>
          
            <th class="text-center">
                @Html.DisplayNameFor(model => model.DateEvaluate)
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

               
              
                <td class="text-center">
                    @item.Employee.Name
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.DateEvaluate)
                </td>
            
            </tr>
        }
    </tbody>
</table>


<style>


    #HHH {
        background-color: #1f2732;
        color: white;
    }
</style>
