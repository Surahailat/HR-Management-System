@model IEnumerable<HR_Management_System.Models.Feedback>

@{
    ViewData["Title"] = "View Feedback";
    Layout = "_LayoutHR";
}
<br />
<br />

<h1 class="text-center" style="color: #1f2732; font-weight: bold; font-size: 2.5rem;">Feedback</h1><br />
<br />


<table class="table table-striped table-bordered shadow-lg rounded" >
    <thead class="thead-dark">
        <tr id="HHH">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th class="text-center" >
                <a href="@Url.Action("ViewFeedbackSorted", new { sortOrder = ViewData["ReceivedAtSortOrder"] == "desc" ? "asc" : "desc" })">
                    @Html.DisplayNameFor(model => model.ReceivedAt)
                    @if (ViewData["ReceivedAtSortOrder"] == "asc")
                    {
                        <span>&#8657;</span> <!-- Arrow for ascending order -->
                    }
                    else
                    {
                        <span>&#8659;</span> <!-- Arrow for descending order -->
                    }
                </a>

            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center" style="color:#0A58CA;">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ReceivedAt)
                </td>
            
            </tr>
        }
    </tbody>



</table>


<style>


    #HHH {
        background-color: #1f2732;
        color: white;
    }
</style>
