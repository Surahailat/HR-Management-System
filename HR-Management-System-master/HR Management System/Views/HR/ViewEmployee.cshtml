@model IEnumerable<HR_Management_System.Models.Employee>

@{
    ViewData["Title"] = "View Employee";
    Layout = "_LayoutHR";
}
<br />

<h1 class="text-center" style="color: #1f2732; font-weight: bold; font-size: 2.5rem;">Employees</h1>
<br />

<table class="table table-striped table-bordered shadow-lg rounded">
    <thead class="thead-dark">
        <tr id="HHH">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Email)
            </th>
           @*  <th class="text-center">
                @Html.DisplayNameFor(model => model.PasswordHash)
            </th> *@
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Position)
            </th>
          @*   <th class="text-center">
                @Html.DisplayNameFor(model => model.ProfileImage)
            </th> *@
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Address)
            </th>
           @*  <th class="text-center">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th> *@
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Manager)
            </th>
@*             <th class="text-center">Actions</th>
 *@        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
              @*   <td class="text-center">
                    @Html.DisplayFor(modelItem => item.PasswordHash)
                </td> *@
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
               @*  <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ProfileImage)
                </td> *@
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
              @*   <td class="text-center">
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td> *@
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Manager.Name)
                </td>
             @*    <td class="text-center">
                    <a asp-action="EditEmployee" asp-route-id="@item.Id" class="btn btn-warning btn-sm" style="border-radius: 6px; padding: 6px 12px;">
                        Edit
                    </a>
                    <a asp-action="DeleteEmployee" asp-route-id="@item.Id" class="btn btn-danger btn-sm" style="border-radius: 6px; padding: 6px 12px;">
                        Delete
                    </a>
                </td> *@
            </tr>
        }
    </tbody>
</table>
<style>


    #HHH {
        background-color: #1f2732;
        color: white;
    }
</style>