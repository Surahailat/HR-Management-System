@model HR_Management_System.Models.Employee

@{
    ViewData["Title"] = "Add Employee";
    Layout = "~/Views/Shared/Manger.cshtml";

}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white text-center">
            <h2><i class="fas fa-user-plus"></i> Add New Employee</h2>
        </div>
        <div class="card-body">
            @if (ViewBag.SuccessMessage != null)
            {
                <div id="successMessage" class="alert alert-success alert-dismissible fade show text-center">
                    <i class="fas fa-check-circle"></i> @ViewBag.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                <div id="errorMessage" class="alert alert-danger alert-dismissible fade show text-center">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="AddEmployee" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label><i class="fas fa-user"></i> Name</label>
                            <input type="text" asp-for="Name" class="form-control" required placeholder="Enter full name" />
                        </div>

                        <div class="form-group mb-3">
                            <label><i class="fas fa-envelope"></i> Email</label>
                            <input type="email" asp-for="Email" class="form-control" required placeholder="Enter email" />
                        </div>

                        <div class="form-group mb-3">
                            <label><i class="fas fa-building"></i> Department</label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
                                <option value="">-- Select Department --</option>
                            </select>
                        </div>

                    @*     <div class="form-group mb-3">
                            <label><i class="fas fa-user-tie"></i> Manager</label>
                            <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.Managers">
                                <option value="">-- Select Manager --</option>
                            </select>
                        </div> *@

                        <div class="form-group mb-3">
                            <label><i class="fas fa-map-marker-alt"></i> Address</label>
                            <input type="text" asp-for="Address" class="form-control" placeholder="Enter address" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label><i class="fas fa-briefcase"></i> Position</label>
                            <input type="text" asp-for="Position" class="form-control" placeholder="Enter position" />
                        </div>

                        <div class="form-group mb-3">
                            <label><i class="fas fa-image"></i> Password</label>
                            <input type="password" asp-for="PasswordHash" class="form-control" placeholder="default.jpg" />
                        </div>

                        <div class="form-group mb-3">
                            <label><i class="fas fa-image"></i> Profile Image</label>
                            <input type="file" asp-for="ProfileImage" name="ImageFile" class="form-control" placeholder="default.jpg" />
                        </div>

                     
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success px-4 py-2">
                        <i class="fas fa-save"></i> Add Employee
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        var successAlert = document.getElementById("successMessage");
        var errorAlert = document.getElementById("errorMessage");

        if (successAlert) {
            successAlert.style.transition = "opacity 0.5s";
            successAlert.style.opacity = "0";
            setTimeout(() => successAlert.remove(), 500);
        }

        if (errorAlert) {
            errorAlert.style.transition = "opacity 0.5s";
            errorAlert.style.opacity = "0";
            setTimeout(() => errorAlert.remove(), 500);
        }
    }, 3000);
</script>

