@model IEnumerable<HR_Management_System.Models.VaccationRequest>

    @{

    Layout = "~/Views/Shared/Manger.cshtml";
    }



    



<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.VaccType)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.VaccDays)</th>
            <th>@Html.DisplayNameFor(model => model.Reason)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.Employee)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.VaccType)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.DisplayFor(modelItem => item.VaccDays)</td>
                <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>@Html.DisplayFor(modelItem => item.Employee.Id)</td>
                <td>
                    @if (item.Status == "Pending") {
                        <a class="btn btn-success btn-sm" asp-action="Approved" asp-controller="Manager" asp-route-id="@item.Id">
                            <i class="fas fa-check-circle"></i> Approved
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="Rejected" asp-controller="Manager" asp-route-id="@item.Id">
                            <i class="fas fa-times-circle"></i> Rejected
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* تحسين تصميم الجدول */
    .table th {
        text-align: center;
        vertical-align: middle;
    }

    .table td {
        vertical-align: middle;
    }

    /* تحسين الأزرار */
    .btn {
        font-size: 14px;
        padding: 5px 10px;
        margin: 2px;
    }

    /* تأثير التمرير على الصفوف */
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    /* تلوين الصفوف */
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }



</style>
