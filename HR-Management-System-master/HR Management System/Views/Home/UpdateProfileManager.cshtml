@model Manager

@{
	ViewData["Title"] = "Update Profile";
    Layout = "~/Views/Shared/Manager.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header text-center bg-primary text-white">
            <h2 class="fw-bold">Update Manager Profile</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="UpdateProfileManager" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address" class="control-label fw-bold"></label>
                    <input asp-for="Address" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Profile Image</label>
                    <input type="file" name="ImageFile"  class="form-control" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
