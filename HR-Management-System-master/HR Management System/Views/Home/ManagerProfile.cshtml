@model Manager

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header text-center bg-success text-white">
            <h2 class="fw-bold">Manager Profile</h2>
        </div>
        <div class="card-body p-4 text-center">
            <img src="~/img/@Model.ProfileImage" class="rounded-circle mb-3" width="120" height="120" alt="Profile Image" />
            <h4 class="fw-bold">@Model.Name</h4>
            <p><i class="fas fa-envelope"></i> @Model.Email</p>
            @* <p><i class="fas fa-briefcase"></i> Position: @Model.Position</p> *@
            <p><i class="fas fa-building"></i> Department: @Model.Department</p>

            <a href="@Url.Action("UpdateProfileManager", "Home", new { Id = Model.Id })" class="btn btn-primary btn-sm">
                ✏️ Edit
            </a>
            <a href="/Home/ResetPassword" class="btn btn-danger"><i class="fas fa-lock"></i> Reset Password</a>
        </div>
    </div>
</div>
